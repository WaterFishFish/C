#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <math.h>
int main() {
	int arr[10];
	int sum = 0;
	printf("Please input ten integers:\n");
	
	for (int i = 0; i < 10; i++) {
		scanf("%d", &arr[i]);
		sum = sum + arr[i];
		
	}
		double aver = sum / 10.0;
		printf("The mean value is %.2f\n", aver);

}
