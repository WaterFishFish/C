#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
void InsertSort(int* arr, int x)
{
    for (int i = 1; i < x; i++)
    {
        int j = i - 1;

        int temp = arr[i];//需要插入的数据 

        while (temp < arr[j] && j >= 0)//当插入的数据小于前面的数据时 
        {
            arr[j + 1] = arr[j];//将插入的数据的前面的数据向后移动 

            j--;
        }
        arr[++j] = temp;//插入数据 （注意这里只能++j，先赋值再执行语句，否则会栈溢出
    }
}
int main()
{
    int x = 10;
	int i;
	int arr[11] = { 6, 3, 8, 9, 12, 47, 15, 22, 29, 31 };
	printf("插入前数组的数据是:");
	for (i = 0; i < 10; i++)
 		printf("%4d", arr[i]);
	printf("\n");
    InsertSort(arr, x);
    printf("插入后数组的数据是:");
	for (i = 0; i < 10; i++)
		printf("%4d", arr[i]);
}
