#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
float aver(int score[40], int n)
{
	int i, sum = 0;
	for (i = 0; i < n; i++)
	{
		sum += score[i];
	}
	return sum;
}
int main()
{
	int  n, i, count= 0;
	float sum = 0;
	float averscore = 0;
	int arr[40];
	scanf("%d", &n);
	for (i = 0; i < n; i++)
	{
		scanf("%d", &arr[i]);
	}
	arr[n + 1] = '\0';//去掉i+1后面的所有元素；

	sum = aver(arr, n);
	averscore = (float)sum/ n;
	printf("Average score is %10.2f\n", averscore);
	for (i = 0; i < n; i++)
	{
		if (arr[i] > averscore)
			count++;
	}
	printf("The number of students in more than average %d\n", count);
}
