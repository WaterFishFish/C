#define _CRT_SECURE_NO_WARNINGS 1
#include<stdio.h>
int main()
{
	int a[14] = { 0 };//显式地赋0值
	int i, n, j = 1;
	printf("The original order of cards is:\n");
	for (i = 1; i <= 13; i++)
	{
		n = 0;
		while (n != i) {
			if (a[j] == 0) {//如果位置空，n就计数
				n++;
				if (n == i)//到了就赋值
					a[j] = i;
			}
			if (j >13)//再重新轮一边
				j = 1;
			else j++;
		}
	}
	for (i = 1; i <= 13; i++)
		printf("%d ", a[i]);
}
