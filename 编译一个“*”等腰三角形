#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <math.h>
int main() {
	int i, j, n;
	printf("Input n:\n");
	scanf("%d", &n);
	for (i = 1; i <=n; i++) {
		for (j =0; j <n-i; j++) {
			printf(" ");
			
			
		}
		for (j = 0; j <2 * i-1; j++) {
			printf("*");

		}

printf("\n");


	}





}
